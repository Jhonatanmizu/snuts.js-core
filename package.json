{
  "name": "snuts.js-core",
  "version": "1.0.0",
  "description": "core snuts.js",
  "main": "index.js",
  "bin": {
    "snuts": "./bin/snuts.js"
  },
  "repository": "https://github.com/Jhonatanmizu/snuts.js-core.git",
  "author": "Jhonatanmizu <natanjesuss20gmail.com>",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup lib/index.ts --dts --format cjs,esm --out-dir dist --clean",
    "test": "vitest run --config  ./vitest.config.js lib/",
    "test:watch": "vitest --config  ./vitest.config.js lib/",
    "test:coverage": "vitest run --config  ./vitest.config.js --coverage lib/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "prepare": "husky",
    "snuts:watch": "tsx ./bin/snuts.js watch \"lib/**/*.{test,tests,spec,specs}.{js,ts,jsx,tsx},lib/**/*test_*.{js,ts,jsx,tsx},lib/**/*test-*.{js,ts,jsx,tsx},lib/**/*Spec*.{js,ts,jsx,tsx}\""
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "eslint --fix",
      "prettier --write",
      "vitest run --config  ./vitest.config.js lib/"
    ]
  },
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/babel__traverse": "^7.28.0",
    "@types/chokidar": "^2.1.7",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@babel/types": "^7.28.4",
    "@types/node": "^24.7.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.1",
    "glob": "^11.0.3",
    "rimraf": "^6.0.1"
  }
}
